*, *::before, *::after {
  box-sizing: border-box;
}

html, body, .container {
  width: 100%;
  height: 100%;
  font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 16px;
  line-height: 1.5em;
  color: #333;
  overflow: hidden;
}

.container {
  background: #ecf0f1;
  position: relative;
}

#logo-wrapper {
  cursor: move;
  width: 16em;
  height: 8em;
}

#logo {
  width: 16em;
  height: 8em;
  transform-style: preserve-3d;
}

#logo-background, #logo-foreground {
  position: absolute;
  opacity: 0;
}

#logo-background {
  background: url('../img/logo-main-grey.png') no-repeat;
  width: 16em;
  height: 8em;
  background-size: 16em 8em;
}

#logo-foreground {
  background: url('../img/logo-main-white.png') no-repeat;
  width: 16em;
  height: 8em;
  background-size: 16em 8em;
}

@media all and (-webkit-min-device-pixel-ratio: 1.5) {
  #logo-background {
    background-image: url('../img/logo-main-grey@2x.png');
  }

  #logo-foreground {
    background-image: url('../img/logo-main-white@2x.png');
  }
}

.copy {
  width: 16em;
  position: absolute;
  left: 50%;
  top: 16em;
  transform: translate3d(-50%, 0, 0);
  text-align: center;
}

.copy .name {
  font-size: 2em;
  line-height: 2em;
  margin-bottom: 1em;

  font-weight: 400;
}

.copy .two-col span {
  width: 8em;
  float: left;

  font-weight: 600;
}

.copy .links a, .copy .links a:visited, .copy .links a:hover {
  color: #333;
  line-height: 4em;
  width: 100%;
  height: 100%;
  position: relative;
  display: inline-block;
  outline: none;
  vertical-align: bottom;
  text-decoration: none;
  white-space: nowrap;
}

/* Courtesy of Mary Lou from Codrops: http://tympanus.net/codrops/2014/06/04/inspiration-for-inline-anchor-styles/ */
.link-animate a::before {
  position: absolute;
  top: 0;
  left: -5px;
  z-index: -1;
  box-sizing: content-box;
  padding: 0 5px;
  width: 100%;
  height: 100%;
  background-color: #fff;
  content: '';
  opacity: 0;
  transition: transform 0.2s, opacity 0.2s;
  transition-timing-function: cubic-bezier(0.25,0.25,0.325,1.39);
  transform: scale(0);
}

.link-animate a:hover::before,
.link-animate a:focus::before {
  opacity: 1;
  transform: scale(1);
}

.js-velocity-hook {
  opacity: 0;
}
